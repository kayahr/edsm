{
    "$schema": "http://json.schemastore.org/package",
    "name": "@kayahr/edsm",
    "version": "1.0.0",
    "type": "module",
    "description": "Typescript types and utility functions for the Elite Dangerous Star Map (EDSM) API",
    "keywords": [
        "elite dangerous",
        "edsm",
        "frontier"
    ],
    "license": "SEE LICENSE IN LICENSE.md",
    "repository": "github:kayahr/edsm",
    "publishConfig": {
        "access": "public"
    },
    "author": {
        "name": "Klaus Reimer",
        "email": "k@ailis.de"
    },
    "funding": "https://github.com/kayahr/edsm?sponsor=1",
    "files": [
        "lib/main/",
        "lib/*.schema.json",
        "src/main/"
    ],
    "exports": "./lib/main/index.js",
    "scripts": {
        "clean": "rimraf lib",
        "build": "run-s build:*",
        "build:compile": "tsc",
        "build:schema": "run-p build:schema:*",
        "build:schema:system-bodies": "ts-json-schema-generator --no-type-check -e all -f tsconfig.json -t SystemBodies -o lib/system-bodies.schema.json",
        "build:schema:system-estimated-value": "ts-json-schema-generator --no-type-check -e all -f tsconfig.json -t SystemEstimatedValue -o lib/system-estimated-value.schema.json",
        "build:schema:system-stations": "ts-json-schema-generator --no-type-check -e all -f tsconfig.json -t SystemStations -o lib/system-stations.schema.json",
        "build:schema:elite-server-status": "ts-json-schema-generator --no-type-check -e all -f tsconfig.json -t EliteServerStatus -o lib/elite-server-status.schema.json",
        "build:schema:flight-logs": "ts-json-schema-generator --no-type-check -e all -f tsconfig.json -t FlightLogs -o lib/flight-logs.schema.json",
        "build:schema:commander-position": "ts-json-schema-generator --no-type-check -e all -f tsconfig.json -t CommanderPosition -o lib/commander-position.schema.json",
        "build:schema:commander-ranks": "ts-json-schema-generator --no-type-check -e all -f tsconfig.json -t CommanderRanks -o lib/commander-ranks.schema.json",
        "build:schema:commander-credits": "ts-json-schema-generator --no-type-check -e all -f tsconfig.json -t CommanderCredits -o lib/commander-credits.schema.json",
        "build:schema:commander-inventory": "ts-json-schema-generator --no-type-check -e all -f tsconfig.json -t CommanderInventory -o lib/commander-inventory.schema.json",
        "build:schema:system": "ts-json-schema-generator --no-type-check -e all -f tsconfig.json -t System -o lib/system.schema.json",
        "build:schema:station": "ts-json-schema-generator --no-type-check -e all -f tsconfig.json -t Station -o lib/station.schema.json",
        "build:schema:powerplay": "ts-json-schema-generator --no-type-check -e all -f tsconfig.json -t PowerPlay -o lib/powerplay.schema.json",
        "build:schema:codex": "ts-json-schema-generator --no-type-check -e all -f tsconfig.json -t Codex -o lib/codex.schema.json",
        "build:schema:body": "ts-json-schema-generator --no-type-check -e all -f tsconfig.json -t Body -o lib/body.schema.json",
        "test": "run-s test:*",
        "test:unit": "vitest run",
        "test:lint": "eslint --max-warnings 0",
        "test:apidoc": "typedoc --emit none",
        "test:spell": "cspell --no-progress --no-summary",
        "apidoc": "typedoc",
        "site": "npm run apidoc && rimraf site && copyfiles -V -u 2 'lib/apidoc/**/*' lib/site && copyfiles -V -u 1 'lib/*.schema.json' lib/site/schemas",
        "install:browser": "playwright install chromium",
        "prepare": "run-s install:browser clean build"
    },
    "devDependencies": {
        "@kayahr/eslint-config": "3.6.2",
        "@kayahr/vitest-matchers": "1.3.0",
        "@types/node": "24.3.0",
        "@vitest/coverage-v8": "3.2.4",
        "ajv": "8.17.1",
        "copyfiles": "2.4.1",
        "cspell": "9.2.1",
        "npm-run-all": "4.1.5",
        "playwright": "1.55.0",
        "rimraf": "6.0.1",
        "source-map-support": "0.5.21",
        "ts-json-schema-generator": "2.4.0",
        "typedoc": "0.28.12",
        "typedoc-github-theme": "0.3.1",
        "typescript": "5.9.2",
        "vitest": "3.2.4"
    }
}
